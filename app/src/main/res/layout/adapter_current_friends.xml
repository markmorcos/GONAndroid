<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image_view_friend_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/picture"
        android:layout_gravity="center_vertical"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:id="@+id/text_view_friend_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark Morcos"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/button_friend_meet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meet"
                />

            <Button
                android:id="@+id/button_friend_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"
                />

            <Button
                android:id="@+id/button_friend_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove"
                />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>